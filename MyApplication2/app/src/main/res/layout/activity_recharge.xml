<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context="com.example.administrator.myapplication.RechargeActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:text="校园卡充值" />

    <EditText
        android:id="@+id/edt_Uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/autoCompleteTextView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_Uname"
        android:layout_alignStart="@+id/edt_Uname"
        android:layout_below="@+id/edt_Uname"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="请输入充值金额"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_updateBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/autoCompleteTextView3"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/autoCompleteTextView3"
        android:layout_marginBottom="25dp"
        android:background="@android:drawable/presence_invisible"
        android:text="确认充值" />
</RelativeLayout>
