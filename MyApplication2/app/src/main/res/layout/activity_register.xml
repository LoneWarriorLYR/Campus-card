<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context="com.example.administrator.myapplication.RegisterActivity">

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_psw"
        android:layout_alignLeft="@+id/edt_psw"
        android:layout_alignStart="@+id/edt_psw"
        android:ems="10"
        android:hint="用户名"
        android:inputType="textPersonName"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edt_psw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_psw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_psw"
        android:layout_alignStart="@+id/edt_psw"
        android:layout_below="@+id/edt_psw"
        android:ems="10"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:background="@drawable/lll"
        android:text="@string/btn_register" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_lock"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_lock"
        android:layout_marginTop="69dp"
        android:text="@string/btn_registerActivity"
        android:textStyle="bold|italic" />

</RelativeLayout>
