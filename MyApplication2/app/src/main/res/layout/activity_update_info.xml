<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context="com.example.administrator.myapplication.UpdateInfoActivity">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:text="修改个人信息" />

    <EditText
        android:id="@+id/edt_class_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/autoCompleteTextView4"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="123dp"
        android:ems="10"
        android:hint="请输入新的学号"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_class_ID"
        android:layout_alignStart="@+id/edt_class_ID"
        android:layout_below="@+id/edt_class_ID"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="请输入新的用户名"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_className"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edt_names"
        android:layout_alignStart="@+id/edt_names"
        android:layout_below="@+id/edt_names"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="请输入新的班级"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edt_class_ID"
        android:layout_toEndOf="@+id/autoCompleteTextView4"
        android:layout_toRightOf="@+id/autoCompleteTextView4"
        android:background="@android:drawable/sym_action_chat"
        android:text="修改学号" />

    <Button
        android:id="@+id/btn_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edt_className"
        android:layout_alignLeft="@+id/btn_id"
        android:layout_alignStart="@+id/btn_id"
        android:background="@android:drawable/sym_action_chat"
        android:text="修改用户名" />

    <Button
        android:id="@+id/btn_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_name"
        android:layout_alignStart="@+id/btn_name"
        android:layout_alignTop="@+id/edt_className"
        android:background="@android:drawable/sym_action_chat"
        android:text="修改班级" />


</RelativeLayout>
